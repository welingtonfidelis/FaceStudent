<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.facestudent.facestudentapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Login" />
        <activity
            android:name=".ListaArea"
            android:label="@string/title_activity_lista_area"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".CadastroUsuario" />
        <activity android:name=".CadastroHabilidade" />
        <activity
            android:name=".ListaUsuario"
            android:label="@string/title_activity_lista_usuario"
            android:parentActivityName=".ListaArea" />
        <activity
            android:name=".Perfil"
            android:parentActivityName=".ListaUsuario" />
        <activity
            android:name=".SplashScreen"
            android:label="@string/title_activity_splash_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CadastroPost"></activity>
    </application>

</manifest>